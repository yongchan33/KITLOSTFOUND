<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 배경 색 -->
    <solid
        android:color="#FFFFFF" >
    </solid>
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"
        />
    <!-- 경계선 굵기, 색 -->
    <stroke
        android:width="2dp"
        android:color="#BBBBBB" >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="0dp"   >
    </corners>

</shape>