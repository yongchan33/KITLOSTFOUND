<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="kr.ac.kumoh.LostNFound.FindThingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="10"
            app:scale_base_width="100">

            <TextView
                android:id="@+id/fttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/thinborder"
                android:hint="게시물 제목"
                app:scale_height="10"
                app:scale_left="0"
                app:scale_textsize="7"
                app:scale_top="0"
                app:scale_width="100" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ftimg1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/ftimg2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/ftimg3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="10"
                app:scale_base_width="100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/blueicon"
                    app:scale_height="8"
                    app:scale_left="1.5"
                    app:scale_top="0"
                    app:scale_width="8.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리 : "
                    app:scale_height="8"
                    app:scale_left="10"
                    app:scale_textsize="5"
                    app:scale_top="1"
                    app:scale_width="31.5" />

                <TextView
                    android:id="@+id/ftcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textline"
                    android:gravity="center"
                    app:scale_height="10"
                    app:scale_left="40"
                    app:scale_textsize="5"
                    app:scale_top="0"
                    app:scale_width="60" />
            </com.ssomai.android.scalablelayout.ScalableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="10"
                app:scale_base_width="100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/blueicon"
                    app:scale_height="8"
                    app:scale_left="1.5"
                    app:scale_top="0"
                    app:scale_width="8.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종류 : "
                    app:scale_height="8"
                    app:scale_left="10"
                    app:scale_textsize="5"
                    app:scale_top="1"
                    app:scale_width="31.5" />

                <TextView
                    android:id="@+id/fttype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textline"
                    android:gravity="center"
                    app:scale_height="10"
                    app:scale_left="40"
                    app:scale_textsize="5"
                    app:scale_top="0"
                    app:scale_width="60" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="10"
                app:scale_base_width="100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/blueicon"
                    app:scale_height="8.5"
                    app:scale_left="1.5"
                    app:scale_top="0"
                    app:scale_width="8.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등록 날짜 : "
                    app:scale_height="10"
                    app:scale_left="10"
                    app:scale_textsize="5"
                    app:scale_top="1"
                    app:scale_width="31.5" />

                <TextView
                    android:id="@+id/ftdate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/textline"
                    android:gravity="center"
                    app:scale_height="10"
                    app:scale_left="40"
                    app:scale_textsize="5"
                    app:scale_top="0"
                    app:scale_width="60" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="10"
                app:scale_base_width="100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/blueicon"
                    app:scale_height="8.5"
                    app:scale_left="1.5"
                    app:scale_top="0"
                    app:scale_width="8.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분실 날짜 : "
                    app:scale_height="10"
                    app:scale_left="10"
                    app:scale_textsize="5"
                    app:scale_top="1"
                    app:scale_width="31.5" />

                <TextView
                    android:id="@+id/ftlostdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textline"
                    android:gravity="center"
                    app:scale_height="10"
                    app:scale_left="40"
                    app:scale_textsize="5"
                    app:scale_top="0"
                    app:scale_width="60" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="18"
                app:scale_base_width="100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/blueicon"
                    app:scale_height="18"
                    app:scale_left="1.5"
                    app:scale_top="0"
                    app:scale_width="8.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분실 위치 : "
                    app:scale_height="18"
                    app:scale_left="10"
                    app:scale_textsize="5"
                    app:scale_top="5"
                    app:scale_width="31.5" />

                <TextView
                    android:id="@+id/ftlostplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textline"
                    android:gravity="center"
                    app:scale_height="18"
                    app:scale_left="40"
                    app:scale_textsize="5"
                    app:scale_top="0"
                    app:scale_width="60" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/ftmap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            tools:context="com.example.abcd.googlemap.MapsActivity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="10"
                app:scale_base_width="100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/blueicon"
                    app:scale_height="8.5"
                    app:scale_left="1.5"
                    app:scale_top="0"
                    app:scale_width="8.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사례금 : "
                    app:scale_height="10"
                    app:scale_left="10"
                    app:scale_textsize="5"
                    app:scale_top="1"
                    app:scale_width="31.5" />

                <TextView
                    android:id="@+id/ftreward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textline"
                    android:gravity="center"
                    app:scale_height="10"
                    app:scale_left="40"
                    app:scale_textsize="5"
                    app:scale_top="0"
                    app:scale_width="60" />
            </com.ssomai.android.scalablelayout.ScalableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="10"
                app:scale_base_width="100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/blueicon"
                    app:scale_height="8.5"
                    app:scale_left="1.5"
                    app:scale_top="0"
                    app:scale_width="8.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자 : "
                    app:scale_height="10"
                    app:scale_left="10"
                    app:scale_textsize="5"
                    app:scale_top="1"
                    app:scale_width="31.5" />

                <TextView
                    android:id="@+id/ftwriter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textline"
                    android:gravity="center"
                    app:scale_height="10"
                    app:scale_left="40"
                    app:scale_textsize="5"
                    app:scale_top="0"
                    app:scale_width="60" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="70"
            app:scale_base_width="100">

            <TextView
                android:id="@+id/ftcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/thinborder"
                android:hint="  게시물 내용"
                app:scale_height="70"
                app:scale_left="0"
                app:scale_textsize="6"
                app:scale_top="0"
                app:scale_width="100" />
        </com.ssomai.android.scalablelayout.ScalableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="13"
                app:scale_base_width="100">

                <Button
                    android:id="@+id/editnoticebt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbt"
                    android:onClick="onMoveFind1Edit"
                    android:visibility="invisible"
                    app:scale_height="10"
                    app:scale_left="49"
                    app:scale_top="3"
                    app:scale_width="25" />

                <Button
                    android:id="@+id/delnoticebt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/deletebt"
                    android:onClick="onDeleteFind1Notice"
                    android:visibility="invisible"
                    app:scale_height="10"
                    app:scale_left="75"
                    app:scale_top="3"
                    app:scale_width="25" />
            </com.ssomai.android.scalablelayout.ScalableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="10"
                app:scale_base_width="100">

                <EditText
                    android:id="@+id/ftcomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textline"
                    android:hint="댓글을 입력하세요."
                    app:scale_height="10"
                    app:scale_left="0"
                    app:scale_textsize="5"
                    app:scale_top="0"
                    app:scale_width="70" />

                <Button
                    android:id="@+id/ftcommentok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/commentbt"
                    app:scale_height="10"
                    app:scale_left="70"
                    app:scale_top="0"
                    app:scale_width="30" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/ftcommentlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"></ListView>
    </LinearLayout>
</ScrollView>